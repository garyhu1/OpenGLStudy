<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制正方形"/>
        <Button
            android:id="@+id/triangles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制三角形"/>
        <Button
            android:id="@+id/texture_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制纹理图片"/>
        <Button
            android:id="@+id/change_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图形变换"/>
        <Button
            android:id="@+id/show_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片展示"/>

        <Button
            android:id="@+id/more_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多纹理处理"/>
        <Button
            android:id="@+id/flow_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="流动的水"/>
        <Button
            android:id="@+id/cube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正方体"/>
        <Button
            android:id="@+id/cube_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正方体纹理"/>
        <Button
            android:id="@+id/multi_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="multi纹理"/>
        <Button
            android:id="@+id/cus_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义多纹理正方形"/>
    </LinearLayout>

</ScrollView>
